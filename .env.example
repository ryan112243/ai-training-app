# AI訓練平台環境變數範例
# 複製此文件為 .env 並填入實際值

# Flask配置
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# 服務器配置
WEB_HOST=127.0.0.1
WEB_PORT=5000
WEB_DEBUG=True

# 數據和模型路徑
DATA_DIR=data
MODEL_SAVE_DIR=models
CHECKPOINT_DIR=checkpoints
LOG_DIR=logs

# 訓練配置
BATCH_SIZE=32
LEARNING_RATE=0.001
NUM_EPOCHS=50
EARLY_STOPPING_PATIENCE=10

# 設備配置
DEVICE=auto  # auto, cpu, cuda

# 日誌配置
LOG_LEVEL=INFO